# AWS RAG Demo Configuration
# Copy this file to .env and adjust values as needed

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY will be read from ~/.aws/credentials
# DO NOT uncomment the lines below unless you specifically need to override AWS CLI credentials
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Model Configuration
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_CHAT_MODEL_ID=amazon.nova-lite-v1:0

# Bedrock Knowledge Base Configuration (filled by setup script)
KB_ID=                      # Knowledge Base ID (generated by scripts/setup-kb.sh)
S3_URI_FOR_KB=              # S3 URI for documents (e.g., s3://my-bucket/sample_docs/)

# Optional: Advanced Configuration
CHUNK_SIZE=800              # Default chunk size for document splitting
CHUNK_OVERLAP=120           # Overlap between chunks
TOP_K_RESULTS=4             # Number of results to retrieve
TEMPERATURE=0.2             # LLM temperature for consistent responses

# Debug and Development
DEBUG=false                 # Enable verbose logging
MOCK_AWS=false              # Use mock responses for development
