# Monitoring Configuration for AWS Bedrock Knowledge Base

# Knowledge Base Configuration
KNOWLEDGE_BASE_ID=your-knowledge-base-id-here
KNOWLEDGE_BASE_NAME=your-knowledge-base-name

# SNS Topic for Alerts (optional)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:bedrock-kb-alerts

# CloudWatch Configuration
DASHBOARD_NAME=BedrockKnowledgeBase-Monitoring
ALARM_PREFIX=BedrockKB

# Monitoring Thresholds
LATENCY_THRESHOLD_MS=5000
ERROR_RATE_THRESHOLD=10
LOW_QUERY_THRESHOLD=1

# Report Configuration
MONITORING_PERIOD_HOURS=24
LOG_RETENTION_DAYS=30

# Cost Monitoring
ENABLE_COST_ALERTS=true
COST_THRESHOLD_USD=100
