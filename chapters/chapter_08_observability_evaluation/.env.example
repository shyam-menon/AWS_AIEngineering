# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here_if_using_temporary_credentials

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=us.amazon.nova-lite-v1:0

# AgentCore Configuration
AGENTCORE_AGENT_ID=your_agent_id_here
AGENTCORE_AGENT_ALIAS_ID=your_agent_alias_id_here
AGENTCORE_SESSION_ID=your_session_id_here

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=strands-observability-demo
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=strands-observability-demo,service.version=1.0.0

# OpenTelemetry Exporter Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp-gateway.region.amazonaws.com:4317
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer your_auth_token_here

# OpenTelemetry Tracing Configuration
OTEL_TRACES_EXPORTER=otlp
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

# OpenTelemetry Metrics Configuration
OTEL_METRICS_EXPORTER=otlp
OTEL_METRIC_EXPORT_INTERVAL=30000

# OpenTelemetry Logs Configuration
OTEL_LOGS_EXPORTER=otlp

# AWS OpenTelemetry Distro Configuration
OTEL_PYTHON_DISTRO=aws_distro
OTEL_PYTHON_CONFIGURATOR=aws_configurator

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/agentcore/strands-agents
CLOUDWATCH_LOG_STREAM=observability-demo
CLOUDWATCH_METRIC_NAMESPACE=AgentCore/Strands

# X-Ray Configuration
AWS_XRAY_TRACING_NAME=strands-observability
AWS_XRAY_CONTEXT_MISSING=LOG_ERROR

# AgentCore Observability Configuration
AGENT_OBSERVABILITY_ENABLED=true
AGENT_METRICS_ENABLED=true
AGENT_TRACING_ENABLED=true
AGENT_LOGGING_ENABLED=true

# Development Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Sampling Configuration for Production
# Set to lower values for production to reduce overhead
PRODUCTION_SAMPLING_RATE=0.1
DEVELOPMENT_SAMPLING_RATE=1.0

# Dashboard Configuration
DASHBOARD_UPDATE_INTERVAL=60
DASHBOARD_RETENTION_DAYS=30

# Evaluation Configuration
EVALUATION_ENABLED=true
EVALUATION_FREQUENCY=100
EVALUATION_METRICS_ENABLED=true

# Security Configuration
PII_REDACTION_ENABLED=true
SENSITIVE_DATA_LOGGING=false

# Performance Configuration
ASYNC_EXPORT=true
BATCH_TIMEOUT=5000
BATCH_SIZE=512
MAX_QUEUE_SIZE=2048

# Optional: Prometheus Configuration
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8000
PROMETHEUS_NAMESPACE=strands

# Optional: Custom Tags and Labels
ENVIRONMENT=development
TEAM=ai-engineering
PROJECT=strands-observability
COST_CENTER=engineering

# Optional: Alert Configuration
ALERT_EMAIL=your-email@company.com
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_LATENCY_P95=5000
